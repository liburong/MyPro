/* pages/comment/comment.wxss */
/* 电影背景图片，虚化效果 */
.detail-container{
  height:400rpx;
  /* 模糊滤镜 */
  filter: blur(40rpx);
  opacity: .9;
}
/* 2.电影背景遮罩层，显示在背景底层 */
.detail-mask{
  position:absolute;
  width:100%;
  height:400rpx;
  background: #333;
  top:120rpx;
  left:0;
  /* 显示底层 */
  z-index: -1; 
}
/* 3.电影详细信息 */
.detail-info{
  position: absolute;
  display: flex;
  width:100%;
  height:400rpx;
  top:120rpx;
  left:0;
  padding:20rpx;
}
.detail-img{
  width:280rpx;
  height:90%;
  margin-right: 24rpx;
}
.detail{
  /* 文字占满剩余空间 */
  flex-grow: 1;
  line-height: 60rpx;
  color:#fff;
  font-size: 24rpx;
}
.detail-sc{
  color:#fc0;
  font-size: 36rpx;
}
.desc{
padding:20rpx;
font-size: 24rpx;
color:#555;
}
.comment-img{
  width:200rpx;
  height: 200rpx;
  margin-right:20rpx;
}