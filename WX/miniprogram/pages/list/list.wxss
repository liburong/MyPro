/* pages/list/list.wxss */
page{
  background: #fff;
} 
.bgImg{
  width:100%;
  height:350rpx;
  /* margin-top: 50rpx; */
}
.myTitle{
  position:absolute;
  background: rgba(105, 105, 105, 0.9);
  width:100%;
  height:350rpx;
  top:150rpx;
  left:0;
  text-align: center;
}
.title{
  margin-top:60rpx;
  font-size: 80rpx;
  font-family: "华文隶书";
  color:coral;
  font-weight: bold;
}
.subtitle{
  font-size:40rpx;
  color:coral;
  font-family: "华文隶书";
  font-weight: bold;
}
.main{
   padding:20rpx;
   border-bottom: 15rpx solid #eee;
   margin-top:30rpx;
}
.level{
  font-family: "华文隶书";
  color:coral;
  font-size:40rpx;
}
.myContainer{
  display: flex;
}
.movie-img{
  width:200rpx;
  height:250rpx;
  margin-right:30rpx;
  border-radius: 4rpx;
}
.movie-info{
  font-size: 30rpx;
  width:300rpx;
  padding-top:20rpx;
  padding-right:30rpx;
  border-right:1rpx dashed #ddd;
}
.movie_title{
  font-weight: bold;
}
.myScore{
  display: flex;
}
.van-rate__item{
  font-size: 25rpx !important;
}
.movie-score{
  font-size: 25rpx;
  color:#faaf00;
  margin-top:7rpx;
  margin-left:8rpx;
} 
.desc{
  font-size: 20rpx;
  color:#666;
  margin-top:10rpx;
  line-height: 40rpx;
}
.moveStyle{
  font-size: 20rpx;
  color:#666;
  padding:15rpx;
  background: #f8f8f8;
  margin-top:20rpx;
}